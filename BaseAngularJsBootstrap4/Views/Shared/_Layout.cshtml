<!DOCTYPE html>
<html lang="en" ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/Content/angular-moment-picker.css" rel="stylesheet"/>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav id="topMenu" class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#/view1">
            <img src="/Images/shark.svg" width="30" height="30" class="d-inline-block align-top" alt="">
            AngularJS BS4
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#/view1">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#/view2">Link</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Actions
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#view1">Cheese entry</a>
                        <a class="dropdown-item" href="#view2">More cheese</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="">No cheese here</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="">Disabled</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>

    @RenderBody()

    <div class="container">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")

    <script src="~/Scripts/umd/popper.js"></script>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/DatePicker/moment-with-locales.js"></script>
    <script src="~/Scripts/DatePicker/angular-moment-picker.min.js"></script>
</body>
</html>
